<%# CSS・・・assets/stylesheets/header.css %>
<div class='header-top'>
  <div class='header-nav'>
    <ul class='header-lists'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.name_sei, "#", class: "user-name"  %></li>
        <li><%= link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: :delete }, method: :delete, class: "logout"  %></li>
      <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
    </ul>
  </div>
</div>
