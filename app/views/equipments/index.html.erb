<div>
  <% @equipments.group_by(&:category).each do |category, category_equipments| %>
    <h2 class='category-title'><%= category %></h2>
    <div class='category-list'>
      <% category_equipments.each do |equipment| %>
        <div class='list'>
          <%= link_to equipment_path(equipment.id), class: 'item-link' do %>
            <div class='item-info'>
              <h3>
                装置名：<%= equipment.equipment_name %><br>
                利用料金：<%= equipment.price %>円／時間<br>
              </h3>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>